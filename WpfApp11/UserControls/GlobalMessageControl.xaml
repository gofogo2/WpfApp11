<UserControl x:Class="WpfApp11.UserControls.GlobalMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp11.UserControls"
             mc:Ignorable="d"  Background="Green" Opacity="0.7"
            Height="100" Width="Auto">
    <Grid Background="Green" >
        <Border Background="Green" BorderBrush="LightGray" BorderThickness="0,0,0,1">
            <TextBlock x:Name="MessageText" Text="" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
