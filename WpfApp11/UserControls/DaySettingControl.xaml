<UserControl x:Class="WpfApp9.DaySettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
        <CheckBox x:Name="DayCheckBox" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBlock Text="시작 시간" VerticalAlignment="Center" Margin="0,0,5,0"/>
        <ComboBox x:Name="StartHourComboBox" Width="50" Margin="0,0,5,0"/>
        <TextBlock Text="시" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox x:Name="StartMinuteComboBox" Width="50" Margin="0,0,5,0"/>
        <TextBlock Text="분" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBlock Text="/ 종료 시간" VerticalAlignment="Center" Margin="0,0,5,0"/>
        <ComboBox x:Name="EndHourComboBox" Width="50" Margin="0,0,5,0"/>
        <TextBlock Text="시" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox x:Name="EndMinuteComboBox" Width="50" Margin="0,0,5,0"/>
        <TextBlock Text="분" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>