<Window x:Class="WpfApp9.RemoveDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="기기 삭제" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="삭제할 기기를 선택하세요:"/>
        <ListBox Grid.Row="1" x:Name="DevicesListBox" Margin="0,5,0,5">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="삭제" Width="75" Click="RemoveButton_Click" Margin="0,0,10,0"/>
            <Button Content="취소" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>